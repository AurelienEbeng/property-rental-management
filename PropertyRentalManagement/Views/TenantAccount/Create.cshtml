@model PropertyRentalManagement.Requests.CreateUser

@{
    var error = ViewData["Error"];
}

<h1 class="text-center">Register</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" id="FirstName" onchange="checkCreateUser()" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" id="LastName" onchange="checkCreateUser()" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="Email" onchange="checkCreateUser()" />
                <span asp-validation-for="Email" class="text-danger"></span>
                @if (error != null)
                {
                    <span>Email is already taken</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" id="Password" onchange="checkCreateUser()" type="password"
                       placeholder="Password must be at least 8 characters" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" onchange="checkCreateUser()" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group row align-items-center">
                <div class="col"><input type="submit" value="Create" class="btn btn-primary" id="Submit" disabled /></div>
                <div class="col"><a asp-action="Index">Back to List</a></div>
            </div>
        </form>
    </div>
</div>

