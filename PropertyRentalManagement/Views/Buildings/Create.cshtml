@model PropertyRentalManagement.Requests.CreateBuilding
@{
    var error = ViewData["Error"];
}
<h1 class="text-center">Create Building</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(error!=null){<div style="background-color:red">Address is taken</div>}
            <div class="form-group">
                <label asp-for="NumberOfFloors" class="control-label" >Number Of Floors</label>
                <input asp-for="NumberOfFloors" class="form-control" type="number" max="170" min="1"/>
                <span asp-validation-for="NumberOfFloors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfApartments" class="control-label">Number Of Apartments</label>
                <input asp-for="NumberOfApartments" class="form-control" type="number" max="900" min="1"/>
                <span asp-validation-for="NumberOfApartments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control"  />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control"  id="City"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Province" class="control-label">Province</label>
                <input asp-for="Province" class="form-control" id="Province" />
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">Postal Code</label>
                <input asp-for="PostalCode" class="form-control" id="PostalCode" onchange="checkCreateBuilding()" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">Country</label>
                <input asp-for="Country" class="form-control" id="Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label>Amenities in building(select all that apply)</label>
                @foreach(var checkbox in Model.AmenitiesInBuildingCheckboxes)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@checkbox.Value" name="AmenitiesInBuilding" 
                        id="checkbox_amenities_in_building_@checkbox.Value" checked="@checkbox.IsChecked" />
                        <label class="form-check-lablel" for="checkbox_@checkbox.Value">@checkbox.Description</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <label>Amenities nearby(select all that apply)</label>
                @foreach (var checkbox in Model.AmenitiesNearbyCheckboxes)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@checkbox.Value" name="AmenitiesNearby"
                               id="checkbox_amenities_nearby_@checkbox.Value" checked="@checkbox.IsChecked" />
                        <label class="form-check-lablel" for="checkbox_@checkbox.Value">@checkbox.Description</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <label>Owners(select all that apply)</label>
                @foreach (var checkbox in Model.OwnersCheckboxes)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@checkbox.Value" name="Owners"
                               id="checkbox_owners_@checkbox.Value" checked="@checkbox.IsChecked" />
                        <label class="form-check-lablel" for="checkbox_@checkbox.Value">@checkbox.Description</label>
                    </div>
                }
            </div>


            <div class="form-group">
                <label>Property Managers(select all that apply)</label>
                @foreach (var checkbox in Model.PropertyManagersCheckboxes)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@checkbox.Value" name="PropertyManagers"
                               id="checkbox_managers_@checkbox.Value" checked="@checkbox.IsChecked" />
                        <label class="form-check-lablel" for="checkbox_@checkbox.Value">@checkbox.Description</label>
                    </div>
                }
            </div>


            

            <div class="form-group row align-items-center">
                <div class="col"><input type="submit" value="Create" class="btn btn-primary" id="Submit" disabled /></div>
                <div class="col"><a asp-action="Index">Back to List</a></div>
            </div>
        </form>
    </div>
</div>




